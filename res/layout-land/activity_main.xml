<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <TextView android:text="@string/preface" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:id="@+id/prefaceText"
        android:singleLine="true"
        android:layout_alignBaseline="@+id/numberText"
        android:layout_alignBottom="@+id/numberText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/postface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:id="@+id/postfaceText"
        android:singleLine="true"
        android:elegantTextHeight="true"
        android:layout_alignBaseline="@+id/numberText"
        android:layout_alignBottom="@+id/numberText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/numberText"
        android:textSize="80sp"
        android:text="@string/numberPlaceholder"
        android:singleLine="false"
        android:layout_width="wrap_content"
        android:autoText="false"
        android:layout_alignParentTop="false"
        android:layout_toRightOf="@+id/prefaceText"
        android:layout_toLeftOf="@+id/postfaceText"
        android:layout_toStartOf="@+id/postfaceText"
        android:layout_toEndOf="@+id/prefaceText"
        android:textAlignment="center" />

    <TextView
        android:text="@string/tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:id="@+id/taglineText"
        android:textStyle="bold|italic"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:textAlignment="center"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:id="@+id/eventText"
        android:layout_below="@+id/numberText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
